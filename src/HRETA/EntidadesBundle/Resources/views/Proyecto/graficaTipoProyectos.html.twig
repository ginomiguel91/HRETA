{% extends '::base.html.twig' %}
{% block body -%}
    <div class="panel span9">
        <div class="panel-header">
            <h3>Proyectos por tipos</h3> 
        </div>
        <div class="panel-body">

            <div class="span12">
                <div id="canvas-holder" class="offset3" style="width: 50%">
                    <canvas id="chart-area" width="100" height="100"/>
                </div>

            </div>
        </div>
    </div>



{% endblock %}
{% block javascripts %}
    <script  src= "{{asset('bundles/entidades/js/chart/src/Chart.Core.js')}}"></script>
    <script  src= "{{asset('bundles/entidades/js/chart/src/Chart.Doughnut.js')}}"></script>

    <script>


        var doughnutData ={{entities|json_encode()|raw}} ;
                window.onload = function() {
                    var ctx = document.getElementById("chart-area").getContext("2d");
                    window.myDoughnut = new Chart(ctx).Doughnut(doughnutData, {responsive: true});
                };


    </script>
{% endblock %}

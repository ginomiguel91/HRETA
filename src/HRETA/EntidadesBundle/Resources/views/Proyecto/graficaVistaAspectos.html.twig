{% extends '::base.html.twig' %}
{% block body -%}
    <div class="panel span9">
        <div class="panel-header">
            <h3>Aspectos por vistas</h3> 
        </div>
        <div class="panel-body">

            <div class="span12">
                <div style="width:100%">
                    <div>
                        <canvas id="canvas" height="450" width="600"></canvas>
                    </div>
                </div>

            </div>
        </div>
    </div>



{% endblock %}
{% block javascripts %}
    <script  src= "{{asset('bundles/entidades/js/chart/src/Chart.Core.js')}}"></script>
    <script  src= "{{asset('bundles/entidades/js/chart/src/Chart.Bar.js')}}"></script>


 
    <script>

        var lineChartData = {
            labels:{{vista|json_encode()|raw}},
                    datasets: [
                        {
                            label: "My Second dataset",
                            fillColor: "rgba(151,187,205,0.2)",
                            strokeColor: "rgba(151,187,205,1)",
                            pointColor: "rgba(151,187,205,1)",
                            pointStrokeColor: "#fff",
                            pointHighlightFill: "#fff",
                            pointHighlightStroke: "rgba(151,187,205,1)",
                            data: {{aspectos|json_encode()|raw}},
                        }
                    ]

        }

        window.onload = function() {
            var ctx = document.getElementById("canvas").getContext("2d");
            window.myLine = new Chart(ctx).Bar(lineChartData, {
                responsive: true
            });
        }


    </script>
{% endblock %}

                                {% else%}
                                    <td>NO</td>
                                {% endif%}
                                <td>{{ entity.causaNoAplicar }}</td>
                                <td>


                                    <ul style="list-style-type: none;">
                                        <li>
                                            <i class=" icon-search"></i> <a class="btn-link" href="{{ path('documentoarquitectura_show', { 'id': entity.id,'idexped':entity.idexped.id }) }}">Mostrar</a>

                                        </li>
                                        <li>
                                            <i class=" icon-edit"></i>  <a class="btn-link" href="{{ path('documentoarquitectura_edit', { 'id': entity.id, 'idexped':entity.idexped.id }) }}">Editar</a>

                                        </li>
                                        <!--  <li>
                                              <i class="icon-remove-circle"></i><a id="{{entity.id}}"href="#eliminar_modal" role="button" class="btn-link btn-remove" data-toggle="modal">Eliminar</a>
  
                                          </li> -->
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

                <ul class="pager">
                    <!--
                    <li>
                        <a href="{{ path('documentoarquitectura_new',{'idexped':idexped}) }}">
                            Crear Documento
                        </a>
                    </li>
                    -->
                </ul>

            </div>
        </div>
    </div>        



{% endblock %}

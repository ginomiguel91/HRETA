{% extends "form_div_layout.html.twig" %}
{% block form_row %}
    {% spaceless %}
        <div class = "">
            {% if form_errors(form) %}


                <div class="alert alert-error span12">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    {{ form_errors(form) }}
                </div>

            {% endif %}


            {{ form_label(form)}}
            {{ form_widget(form, { 'attr' : { 'class' : 'span12' } }) }}

        </div>
    {% endspaceless %}
{% endblock %}

